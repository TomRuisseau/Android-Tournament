<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Candidates">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/candidatesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCandidatesMovies" />

    <Button
        android:id="@+id/btnCandidatesGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Games"
        app:layout_constraintStart_toEndOf="@+id/buttonChoicesCandidates"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCandidatesMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Movies"
        app:layout_constraintEnd_toStartOf="@+id/btnCandidatesShows"
        app:layout_constraintStart_toEndOf="@+id/btnCandidatesGames"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCandidatesShows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Shows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonChoicesCandidates"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="41dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="@string/Return"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>